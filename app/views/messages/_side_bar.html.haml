.SideBar
  .SideBar__user_info
    .TopItems
      .TopItems__name
        = current_user.name
      %ul.TopItems__iconlist
        %li.TopItems__iconlist__icon
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit', class:"icon-color") 
        %li.TopItems__iconlist__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class:"icon-color")
            
  .SideBar__group_list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group__link" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message


